<h1 align="center">Login</h1>

<%=form_for :session, :html=>{class:"form-horizontal", role:"form"}, url:login_path do |item|%>
      
        <div class="form-group">
          <div class="control-label-col-sm-2">
            <%= item.label :email%> 
          </div>
          <div class="col-sm-12">
            <%= item.email_field :email, class:"form-control", placeholder: "Enter email", autofocus: true%>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label-col-sm-2">
            <%= item.label :password%> 
          </div>
          <div class="col-sm-12">
            <%= item.password_field :password, class:"form-control", placeholder: "Enter password", autofocus: true, autocomplete: "off"%>
          </div>
        </div>
        <div class= "form-group">
          <div class="col-sm-offset-5 col-sm-10">
            <%= item.submit "Login", class:"btn btn-primary btn-xlarge"%>
          </div> 
        </div>
      <%end%>
      <div class="col-xs-6">
        [<%= link_to "Cancel request and go back to articles listing", articles_path%>]
      </div>