<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%=form_for @category, :html=>{class:"form-horizontal", role:"form"} do |item|%>
      
  <div class="form-group">
    <div class="control-label-col-sm-2"><%= item.label :name%></div>
    <div class="col-sm-12"><%= item.text_field :name, class: "form-control", placeholder: "Enter category name" %></div>
  </div> 
  <div class= "form-group">
    <div class="col-sm-offset-5 col-sm-10"><%= item.submit class:"btn btn-primary btn-lg"%></div> 
  </div>
<%end%>
  <div class="col-xs-12">
    [<%= link_to "Cancel request and go back to articles listing", articles_path%>]
   </div>

