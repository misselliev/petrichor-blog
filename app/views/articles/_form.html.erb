<% if @article.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@article.errors.count, "error")%>
            prohibited this article from being saved: </h2>
            <div class="panel-body">
              <ul>
              <% @article.errors.full_messages.each do |msg|%>
                <li><%=msg%></li>
              <%end%>
              </ul>
            </div>
          </div>
      </div>
  </div>
<%end%>

<div class="row">
  <div>
    <div class="col-xs-12">
      <%=form_for @article, :html=>{class:"form-horizontal", role:"form"} do |item|%>
      
        <div class="form-group">
          <div class="control-label-col-sm-2">
            <%= item.label :title%> 
          </div>
          <div class="col-sm-12">
            <%= item.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label-col-sm-2">
            <%= item.label :description%> 
          </div>
          <div class="col-sm-12">
            <%= item.text_area :description, class:"form-control", rows: 10, placeholder: "Body of the article", autofocus: true%>
          </div>
        </div>
        <div class= "form-group">
          <div class="col-sm-offset-5 col-sm-10">
            <%= item.submit class:"btn btn-primary btn-lg"%>
          </div> 
        </div>
      <%end%>
      <div class="col-xs-12 col-xs-offset-9">
        [<%= link_to "Cancel request and go back to articles listing", articles_path%>]
      </div>
    </div>
  </div>
</div>