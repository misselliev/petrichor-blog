<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created:</h2>
<ul>
  <% @article.errors.full_messages.each do |msg|%>
  <li><%=msg%></li>
  <%end%>
</ul>
<% end %>
<%=form_for @article do |item|%>
  <p>
  <%= item.label :title%> </br>
  <%= item.text_field :title%>
  </p>
  <p>
  <%= item.label :description%> </br>
  <%= item.text_area :description%>
  </p>
  <p>
  <%= item.submit%>
  </p>
<%end%>

<%= link_to "Back to articles listing", articles_path%>